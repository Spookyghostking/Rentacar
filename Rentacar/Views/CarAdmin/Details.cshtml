@model Rentacar.BusinessModels.Car.CarDetailsBusinessModel

<div>
    <h4>CarDetailsBusinessModel</h4>
    <hr />
    @await Html.PartialAsync("_ImageCarousel", Model.Images)
    @if (Model.Images == null || Model.Images.Count() == 0)
    {
        <a class="btn btn-primary" asp-controller="CarImageAdmin" asp-action="Create" asp-route-id="@Model.ID">+ Add Image</a>
    } else
    {
        <a class="btn btn-primary" asp-action="CarImages" asp-route-id="@Model.ID">Edit Images</a>
    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicencePlateNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicencePlateNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarManufacturerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarManufacturerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarModelName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarModelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturedYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManufacturedYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DailyFee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DailyFee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FixedFee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FixedFee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
