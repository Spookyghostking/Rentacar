@using Microsoft.AspNetCore.Identity
@model IdentityRole

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Edit role</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input disabled asp-for="Id" class="form-control" aria-required="true" />
                <label asp-for="Id"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" aria-required="true" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <a class="btn btn-primary" asp-action="Index">Cancel</a>
            <input type="submit" class="btn btn-warning" value="Confirm" />
        </form>
    </div>
</div>